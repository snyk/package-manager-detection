{
    "compilerOptions": {
      "outDir": "./dist",
      "pretty": true,
      "target": "ES2020",
      "lib": [
        "ES2020"
      ],
      "allowJs": false,
      "module": "commonjs",
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "declaration": true,
